{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "jsx": "react",
        "jsxFactory": "h",
        "declaration": true,
        "sourceMap": false,
        "removeComments": true,
        "strict": false,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "alwaysStrict": false,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "dom",
            "es5",
            "es2015",
            "es2016",
            "es2017",
            "es2018.promise"
        ]
    },
    "include": [
        "**/*.tsx",
        "**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
